#include <cv.h>
#include <highgui.h>
#include <stdio.h>
#include <math.h>
#include <stdlib.h>
#include <iostream>


//void drawshape();
//IplImage* shape;
int circle(int,int);
int x=400;
int y=300;

char key1;
char key2;

	void GoturSag(void)
	{
		if (x<750)
		{
			x = x+25;
			circle(x,y);
		}
		else
		{
			x=x;
		}
	}

	void GoturSol(void)
	{
		if(x>50)
		{
			x = x-25;
			circle(x,y);
		}
		else
		{
			x=x;
		}
	}

	void GoturYuk(void)
	{

	y= y-50;
	circle(x,y);
	}

	void GoturAsa(void)
	{
	y=y+50;
	circle(x,y);
	}

	void GoturSagYuk(void)
		{

		x = x+50;
		y = y-50;
		circle(x,y);
		}

	void GoturSolYuk(void)
			{

			x = x-50;
			y = y-50;
			circle(x,y);
			}

	void GoturSagAsa(void)
			{

			x = x+50;
			y = y+50;
			circle(x,y);
			}

	void GoturSolAsa(void)
				{

				x = x-50;
				y = y+50;
				circle(x,y);
				}

int main(int argc, char** argv)
{
	//drawshape();

	circle(x,y);
    while(1)
		{
    	scanf("%s",&key1);

    	switch(key1)
    	{
    	case 'z':
    		GoturSolAsa();
    		break;
    	case 's':
    		GoturAsa();
    		break;
    	case 'c':
    		GoturSagAsa();
    		break;
    	case 'a':
    		GoturSol();
    	    break;
    	case 'd':
    		GoturSag();
    	    break;
    	case 'q':
    		GoturSolYuk();
    		break;
    	case 'w':
    		GoturYuk();
    	  	break;
    	case 'e':
    		GoturSagYuk();
    		break;
		}
		}
}
/*void drawshape(void)
